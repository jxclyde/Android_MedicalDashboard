<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- res/layout/doctor_item.xml -->
    <LinearLayout
        android:layout_width="207dp"
        android:layout_height="95dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Зображення лікаря -->
        <ImageView
            android:id="@+id/doctorPhotoImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_doctor_photo" />

        <!-- Інформація про лікаря -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/doctorNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor Name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/doctorSpecializationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialization"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/doctorReviewsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Reviews"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>